/* 中间的内容 */
.kong{
  position: fixed;
  top: 20vh;
  left: 43vw;
  font-size: 40rpx;
  color: rgb(118, 115, 128);
}

.put{
  display: flex;
  flex-direction: column;
  width: 94vw;
  margin: 2vh 3vw;
  height: 30vh;
  border-bottom: 3rpx dotted rgb(209, 223, 236);
}

.putTop{
  width: 100%;
  height: 20vh;
  display: flex;
}

.putTopDes{
  margin-left: 2vw;
  width: 50vw;
  line-height: 5vh;
  font-family: cursive;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.putTopDes text{
  color: rgb(29, 125, 235);
}

.putTopImg image{
  width: 40vw;
  height: 20vh;
}

.putBottom{
  line-height: 10vh;
  display: flex;
  justify-content: space-around;
}

.putBottomDelete{
  font-size: large;
  color: rgb(238, 85, 85);
  
}