.page{
  background: repeat url("https://wimg.588ku.com/gif620/21/03/23/e9978197b560a52c5cf4a7ee248fbb5a.gif");

  position: absolute;
  background-repeat: repeat;
  top: 20vh;
  left: 0;
  width: 100vw;
  height: 80vh;
  z-index: -1;
}


.swiper_view{
  margin-top: 2vh;
  margin-left: 3vw;
  width: 94vw;

  /* border: 2px solid red; */
}

.swiper swiper-item{
  border-radius: 3vh;
}

.content{
  display: flex;
  justify-content: space-around;
  margin-top: 3vh;
}

.body, .girl{
  height: 50vh;
  width: 47vw;
  border-radius: 2vw;
}

.body{
  background-color: rgba(96, 143, 235, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.girl{
  background-color: rgba(239, 95, 190, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.body_top, .girl_top{
  flex: 1;
  width: 70%;
  border-radius: 4vw;
  background-color: rgba(86, 120, 182, 0.8);
  margin-top: 1vh;
}

.body_img, .girl_img{
  flex: 4;
  width: 35vw;
  padding: 2vh 0;
}

.body_img image, .girl_img image{
  width: 100%;
  height: 100%;
}

.body_bottom, .girl_bottom{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.body_bottom_put, .girl_bottom_put{  
  /* .body_bottom_out, .girl_bottom_out */
  height: 8vh;
  line-height: 8vh;
  color: aliceblue;
  font-size: 35rpx;
  background-color: black;
  border-radius: 20rpx;
  margin-bottom: 1vh;
  padding: 0 3vw;
}
