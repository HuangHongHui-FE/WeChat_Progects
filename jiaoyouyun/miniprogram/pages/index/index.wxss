/* 遮罩层 */
.hide {
  width: 100vw;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
  position: fixed;
  top: 0vw;
  left: 0vh;
}

/* 弹出框 */
.show_body{
  background-color: white;
  z-index: 999;
  position: fixed;
  top: 30vh;
  left: 0vh;
  width: 100vw;
  height: 70vh;
  font-size: 35rpx;
}

.show_body_top{
  width: 100vw;
  height: 10vh;
  text-align: center;
  /* background-color: aqua; */
  line-height: 10vh;
  
}

.show_body_top_1{
  font-weight: 800;
}

.show_body_top_2{
  float: right;
  margin-right: 5vw;
}

.show_body_content{
  height: 45vh;
  width: 90vw;
  /* background-color: bisque; */
  margin: 0 5vw;
  border: 1rpx solid black;
}

.show_body_content_1{
  height: 7vh;
  line-height: 7vh;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #C8C8C8;
  display: flex;
  justify-content: space-between;
}
.show_body_content_2, .show_body_content_3, .show_body_content_4, .show_body_content_5{
  height: 10vh;
  /* line-height: 10vh; */
  overflow: hidden;
  padding: 0 20rpx;
}
/* .show_body_content_2{
} */
.show_body_content_3{
  padding-bottom: 1vh;
  border-bottom: 1rpx solid #C8C8C8;
  display: flex;
}

.show_body_content_3_img{
  height: 10vh;
  width: 15vw;
  margin-right: 1vw;
}

.show_body_content_3_img image{
  width: 100%;
  height: 100%;
}

.show_body_content_3_add{
  text-align: center;
  line-height: 10vh;
  width: 15vw;
  background-color: #b8b6b6;
  font-size: 80rpx;
}
.show_body_content_4{
  /* background-color: blue; */

  height: 9vh;
  border-bottom: 1rpx solid #C8C8C8;
  display: flex;
  line-height: 9vh;
}

/* .show_body_content_4_picker{
  width: 35vw;
  border-right: 1rpx solid #C8C8C8;
} */
.show_body_content_4 text{
  width: 35vw;
  border-right: 1rpx solid #C8C8C8;
}

.show_body_content_4_input{
  width: 65vw;
  height: 9vh;
  padding: 0 20rpx;
}

.show_body_content_5{
  height: 8vh;
  line-height: 8vh;
  display: flex;
}

.show_body_content_5 text{
  border-right: 1rpx solid #C8C8C8;
  width: 28vw;
}

.show_body_content_5_picker{
  margin: 0 auto;
}

.price {
  line-height: 5vh;
  text-align: center;
  font-weight: 600;
}


.out_body{
  background-color: white;
  z-index: 999;
  position: fixed;
  top: 40vh;
  left: 0vh;
  width: 100vw;
  height: 60vh;
  font-size: 35rpx;
}

.out_body_img_1{
  width: 30vw;
  margin: 0 auto;
  height: 25vh;
  
}

.out_body_img_1 image{
  width: 100%;
  height: 100%;
  border-radius: 2vh;
}

.out_body_content_2{
  width: 85vw;
  height: 4vh;
  background-color: rgb(238, 238, 238);
  margin: 2vh auto;
  display: flex;
  justify-content: space-between;
  padding: 2vh;
  border-radius: 2vh;
  line-height: 4vh;
}

/* .out_body_content_2_picker{

} */

.out_body_content_2 text{
  font-weight: 600;
  font-size: 32rpx;
}

.out_body_btn button{
  background-color: black;
  color: white;
  font-size: 30rpx;
}


.bottom_view{
  margin-top: 3vh;
  font-weight: 600;
  display: flex;
}

.bottom_view button{
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0);
}

.xuzhi_view{
  padding: 5vw;
  font-size: 33rpx;
  font-weight: 600;
}
.xuzhi_view view{
  margin-bottom: 2vh;
}




